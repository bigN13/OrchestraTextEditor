<orchestra:DocumentView x:Class="Orchestra.Modules.DataGrid.Views.DataGridPropertiesView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:catel="http://catel.codeplex.com"
                        xmlns:orchestra="http://orchestra.codeplex.com">
    <!-- Content -->
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <TextBlock Text="Number of records: "/>
            <TextBlock Text="{Binding NumberOfRows}" />
        </StackPanel>
    </Grid>
</orchestra:DocumentView>
